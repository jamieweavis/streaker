{
  "name": "streaker",
  "productName": "Streaker",
  "private": true,
  "description": "GitHub contribution streak & stat tracking menu bar app",
  "version": "1.6.1",
  "homepage": "https://github.com/jamieweavis/streaker#readme",
  "license": "MIT",
  "main": ".webpack/main",
  "author": "Jamie Weavis",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamieweavis/streaker.git"
  },
  "bugs": {
    "url": "https://github.com/jamieweavis/streaker/issues"
  },
  "keywords": [
    "contribution",
    "contribution-graph",
    "electron",
    "electron-app",
    "github",
    "macos",
    "menubar",
    "streak"
  ],
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "biome check src",
    "lint:fix": "npm run lint -- --write",
    "format": "biome format src",
    "format:write": "npm run format --  --write",
    "styles": "npx @tailwindcss/cli -i ./src/renderer/input.css -o ./src/renderer/output.css --watch",
    "prepare": "husky"
  },
  "release": {
    "branches": ["main"],
    "plugins": [
      "@semantic-release/changelog",
      "@semantic-release/commit-analyzer",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github",
      "@semantic-release/release-notes-generator"
    ]
  },
  "lint-staged": {
    "*.ts": ["biome format --write", "biome lint --write"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-dmg": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron-forge/plugin-webpack": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.1",
    "@semantic-release/github": "7.2.3",
    "@semantic-release/npm": "7.1.3",
    "@semantic-release/release-notes-generator": "9.0.3",
    "@types/auto-launch": "^5.0.5",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.11.0",
    "electron": "35.0.1",
    "fork-ts-checker-webpack-plugin": "^7.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "node-loader": "^2.1.0",
    "semantic-release": "17.4.7",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.12",
    "auto-launch": "^5.0.6",
    "contribution": "^6.0.0",
    "cron": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "7.0.3",
    "tailwindcss": "^4.0.12"
  }
}
